<div class="progress-bar-container">
  <input
    ...attributes
    data-test-task-progress-bar
    class='progress-bar__input-slider'
    id='input'
    type='range'
    value={{@value}}
    min="0"
    max="100"
    step="10"
    {{on 'change' @onUpdate}}
  />
  <button
      data-text-progress-bar-button
 class="progress-bar__button" type="button">
   {{@value}}
  </button>
</div>